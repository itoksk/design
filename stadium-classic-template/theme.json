{
  "name": "Stadium Classic",
  "version": "1.0.0",
  "description": "フェアプレーの白、力強さの黒、歓喜のクリムゾンレッド",
  
  "colors": {
    "primary": {
      "white": "#FFFFFF",
      "black": "#0A0A0A",
      "crimson": "#DC143C"
    },
    
    "secondary": {
      "charcoal": "#2C2C2C",
      "silver": "#C0C0C0",
      "lightGray": "#F5F5F5",
      "bloodOrange": "#CC1100",
      "offWhite": "#FAFAFA"
    },
    
    "grayscale": {
      "50": "#FAFAFA",
      "100": "#F5F5F5",
      "200": "#E0E0E0",
      "300": "#C0C0C0",
      "400": "#808080",
      "500": "#606060",
      "600": "#404040",
      "700": "#2C2C2C",
      "800": "#1A1A1A",
      "900": "#0A0A0A"
    },
    
    "functional": {
      "success": "#28A745",
      "warning": "#DC143C",
      "error": "#CC1100",
      "info": "#2C2C2C"
    },
    
    "opacity": {
      "black90": "rgba(10, 10, 10, 0.9)",
      "black75": "rgba(10, 10, 10, 0.75)",
      "black50": "rgba(10, 10, 10, 0.5)",
      "black25": "rgba(10, 10, 10, 0.25)",
      "white90": "rgba(255, 255, 255, 0.9)",
      "white75": "rgba(255, 255, 255, 0.75)",
      "white50": "rgba(255, 255, 255, 0.5)",
      "white25": "rgba(255, 255, 255, 0.25)",
      "crimson50": "rgba(220, 20, 60, 0.5)"
    }
  },
  
  "typography": {
    "fonts": {
      "display": "'Bebas Neue', 'Oswald', sans-serif",
      "body": "'Roboto', 'Inter', 'Noto Sans JP', sans-serif",
      "number": "'Teko', 'Barlow Condensed', sans-serif",
      "accent": "'Montserrat', 'Raleway', sans-serif",
      "mono": "'Roboto Mono', monospace"
    },
    
    "sizes": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "30px",
      "4xl": "36px",
      "5xl": "48px",
      "6xl": "60px",
      "7xl": "72px",
      "8xl": "96px",
      "9xl": "128px"
    },
    
    "weights": {
      "thin": 100,
      "light": 300,
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800,
      "black": 900
    },
    
    "lineHeights": {
      "tight": 1.1,
      "snug": 1.2,
      "normal": 1.5,
      "relaxed": 1.75,
      "loose": 2
    },
    
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em"
    }
  },
  
  "layout": {
    "container": {
      "maxWidth": "1440px",
      "padding": {
        "mobile": "16px",
        "tablet": "24px",
        "desktop": "32px"
      }
    },
    
    "grid": {
      "columns": 12,
      "gutter": "24px",
      "margin": "24px"
    },
    
    "spacing": {
      "0": "0",
      "1": "4px",
      "2": "8px",
      "3": "12px",
      "4": "16px",
      "5": "20px",
      "6": "24px",
      "8": "32px",
      "10": "40px",
      "12": "48px",
      "16": "64px",
      "20": "80px",
      "24": "96px",
      "32": "128px"
    },
    
    "breakpoints": {
      "xs": "320px",
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1440px"
    }
  },
  
  "components": {
    "button": {
      "primary": {
        "background": "#DC143C",
        "color": "#FFFFFF",
        "hoverBackground": "#CC1100",
        "padding": "12px 32px",
        "fontWeight": 700,
        "textTransform": "uppercase",
        "border": "none",
        "transition": "all 0.2s ease-out"
      },
      "secondary": {
        "background": "#FFFFFF",
        "color": "#0A0A0A",
        "border": "2px solid #0A0A0A",
        "hoverBackground": "#0A0A0A",
        "hoverColor": "#FFFFFF",
        "padding": "12px 32px",
        "transition": "all 0.2s ease-out"
      },
      "ghost": {
        "background": "transparent",
        "color": "#0A0A0A",
        "border": "2px solid #0A0A0A",
        "hoverBackground": "#0A0A0A",
        "hoverColor": "#FFFFFF",
        "padding": "10px 28px",
        "transition": "all 0.2s ease-out"
      }
    },
    
    "card": {
      "default": {
        "background": "#FFFFFF",
        "border": "2px solid #0A0A0A",
        "padding": "24px",
        "hoverTransform": "translateY(-4px)",
        "hoverShadow": "0 8px 24px rgba(10, 10, 10, 0.15)",
        "transition": "all 0.2s ease-out"
      },
      "inverted": {
        "background": "#0A0A0A",
        "color": "#FFFFFF",
        "padding": "24px"
      },
      "accent": {
        "background": "#FFFFFF",
        "border": "3px solid #DC143C",
        "padding": "24px"
      }
    },
    
    "navigation": {
      "header": {
        "background": "#FFFFFF",
        "borderBottom": "2px solid #0A0A0A",
        "height": "80px",
        "sticky": true,
        "scrolledBackground": "#0A0A0A",
        "scrolledColor": "#FFFFFF"
      },
      "link": {
        "color": "#0A0A0A",
        "hoverColor": "#DC143C",
        "activeUnderline": "3px solid #DC143C",
        "fontWeight": 600,
        "textTransform": "uppercase",
        "letterSpacing": "0.05em"
      },
      "mobileMenu": {
        "background": "#0A0A0A",
        "color": "#FFFFFF",
        "overlay": "rgba(10, 10, 10, 0.95)"
      }
    },
    
    "form": {
      "input": {
        "background": "#FFFFFF",
        "border": "2px solid #0A0A0A",
        "padding": "12px 16px",
        "focusBorder": "#DC143C",
        "errorBorder": "#CC1100",
        "fontSize": "16px"
      },
      "label": {
        "color": "#0A0A0A",
        "fontWeight": 600,
        "marginBottom": "8px"
      },
      "checkbox": {
        "size": "24px",
        "border": "2px solid #0A0A0A",
        "checkedBackground": "#DC143C"
      }
    },
    
    "scoreboard": {
      "background": "#0A0A0A",
      "textColor": "#FFFFFF",
      "scoreColor": "#DC143C",
      "scoreFontSize": "96px",
      "scoreFontWeight": 900,
      "divider": "3px solid #DC143C",
      "padding": "32px"
    }
  },
  
  "effects": {
    "shadows": {
      "sm": "0 2px 4px rgba(10, 10, 10, 0.1)",
      "md": "0 4px 8px rgba(10, 10, 10, 0.15)",
      "lg": "0 8px 16px rgba(10, 10, 10, 0.2)",
      "xl": "0 16px 32px rgba(10, 10, 10, 0.25)",
      "inner": "inset 0 2px 4px rgba(10, 10, 10, 0.1)"
    },
    
    "borders": {
      "thin": "1px solid",
      "medium": "2px solid",
      "thick": "3px solid",
      "extraThick": "5px solid"
    },
    
    "radius": {
      "none": "0",
      "sm": "2px",
      "md": "4px",
      "lg": "8px",
      "xl": "16px",
      "full": "9999px"
    },
    
    "transitions": {
      "fast": "all 0.15s ease-out",
      "normal": "all 0.2s ease-out",
      "slow": "all 0.3s ease-out"
    }
  },
  
  "animations": {
    "pulse": {
      "keyframes": "0%, 100% { opacity: 1; } 50% { opacity: 0.5; }",
      "duration": "2s",
      "timing": "ease-in-out",
      "iteration": "infinite"
    },
    "slideIn": {
      "keyframes": "from { transform: translateX(-100%); } to { transform: translateX(0); }",
      "duration": "0.3s",
      "timing": "ease-out"
    },
    "scaleUp": {
      "keyframes": "from { transform: scale(0.95); } to { transform: scale(1); }",
      "duration": "0.2s",
      "timing": "ease-out"
    },
    "countUp": {
      "duration": "2s",
      "timing": "ease-out",
      "triggerOnScroll": true
    }
  },
  
  "patterns": {
    "diagonalStripes": {
      "angle": "45deg",
      "colors": ["#0A0A0A", "#FFFFFF"],
      "width": "10px"
    },
    "gridPattern": {
      "color": "#E0E0E0",
      "size": "20px",
      "thickness": "1px"
    },
    "noise": {
      "opacity": 0.02,
      "blendMode": "multiply"
    }
  },
  
  "responsive": {
    "mobile": {
      "fontScale": 0.9,
      "spacingScale": 0.8,
      "simplifiedLayout": true
    },
    "tablet": {
      "fontScale": 0.95,
      "spacingScale": 0.9,
      "twoColumnLayout": true
    },
    "desktop": {
      "fontScale": 1,
      "spacingScale": 1,
      "fullLayout": true
    }
  },
  
  "accessibility": {
    "contrast": {
      "minimum": 7,
      "blackOnWhite": 21,
      "whiteOnBlack": 21,
      "whiteOnCrimson": 8.5
    },
    "focus": {
      "outline": "3px solid #DC143C",
      "outlineOffset": "2px"
    },
    "reducedMotion": {
      "transitions": "none",
      "animations": "none"
    }
  }
}